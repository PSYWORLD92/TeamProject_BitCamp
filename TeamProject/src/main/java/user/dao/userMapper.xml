<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	
<mapper namespace="userMapper">
	<select id="checkLogin" parameterType="java.util.Map" resultType="user">
  		select * from user_table where user_id = #{email} and user_pwd = #{pwd}
  	</select>
  	
  	<select id="findEmailAddress" parameterType="String" resultType="String">
		select user_id from user_table where hp = #{phone}
	</select>
</mapper>